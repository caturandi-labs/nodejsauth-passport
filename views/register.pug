extends layout

block content
 

 .container
  .row
   .col-md-8.col-md-offset-2
    h2.page-header Register Page
    p Please Register using the form below

    if errors
     each error, i in errors
      div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/register', enctype='multipart/form-data')
     .form-group
      label.control-label Name
      input.form-control(name='name', type='text', placeholder='Enter  Name')
     .form-group
      label.control-label Email
      input.form-control(name='email', type='email', placeholder='Enter  E-Mail Address')
     .form-group
      label.control-label Username
      input.form-control(name='username', type='text', placeholder='Enter  Username')
     .form-group
      label.control-label Password
      input.form-control(name='password', type='password', placeholder='Enter  Password')
     .form-group
      label.control-label Confirm Password
      input.form-control(name='password2', type='password', placeholder='Confirm  Password')
     .form-group
      label.control-label Profile Image
      input.form-control(name='profile-image', type='file')
     input.btn.btn-success(type='submit',name='submit', value='Register')
   
